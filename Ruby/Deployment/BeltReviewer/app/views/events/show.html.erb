<div class="container">
  <a href="<%= events_path %>">Events Dashboard</a>  |  <a href="<%= users_logout_path %>">Logout</a>
  <div class="col-md-8">
    <div class="row">
      <ul>
        <li><h2><%= @event.name %></h2></li>
        <li><h3>Host:  <%= @event.user.first_name %> <%= @event.user.last_name %></h3></li>
        <li><h3>Date:  <%= @event.date %></h3></li>
        <li><h3>Location:  <%= @event.city %>, <%= @event.state %></h3></li>
        <li><h3>People who are joining the event:  <%= @event.date %></h3></li>
      </ul>
    </div>
    <div class="row">
      <table class="table table-striped">
        <thead>
          <th>Name</th>
          <th>Location</th>
          <th>State</th>
        </thead>
        <tbody>
          <% if @joiners %>
            <% @joiners.each do |u| %>
            <tr>
              <td><%= u.first_name %> <%= u.last_name %></td>
              <td><%= u.city%></td>
              <td><%= u.state %></td>
            </tr>
            <% end %>
          <% end %>
        </tbody>

      </table>

    </div>


  </div>
  <div class="col-md-4">
    <div class="row">
      <h2>Discussion about this event:</h2>

    </div>

  </div>

</div>
